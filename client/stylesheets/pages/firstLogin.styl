@import '../colors'

.first-login-wrapper
    height 100%
    display flex
    justify-content center
    align-items center
    .first-login
        margin-top 30px
        padding 0 5px
        text-align center
        max-width 800px
        +below(820px)
            width 100%

        &.card
            background-color landing-color
        h1
            color landing-color
        h2
            margin-top 0
            font-size 30px
            color landing-color
        p
            font-size 20px
            font-weight 300
