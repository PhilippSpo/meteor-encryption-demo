.text-preview-card
    width 70%
    height 70%
    .text-preview-title
      position relative
      padding 15px 15px 15px 15px
      background-color #f7f7f7
      display box
      > h3
        margin 0
    .card-content
        padding 0
        height 100%
        position relative
        .row
            margin-bottom 0
        .card-textarea
            position absolute
            top 122px
            bottom 60px
            left 0
            right 0
            overflow-y auto
            padding 20px
        .card-textarea-no-edit
            position absolute
            top 55px
            bottom 5px
            left 0
            right 0
            overflow-y auto
            padding 20px
        .bottom-bar
            position absolute
            bottom 0
            left 0
            right 0
