.toolbar
  position absolute
  top 0
  bottom 0
  left 0
  right 0
  display flex
  align-items center
  > *
    position absolute
    top 0
    bottom 0
    left 0
    right 0
    display flex
    align-items center
    +below(600px)
      font-size 17px

  > :last-child
    left auto
    right 16px

  > :first-child
    left 16px !important
    > i
      font-size 24px
      color rgba(0,0,0,0.54)

  > :nth-child(2)
    left 72px
